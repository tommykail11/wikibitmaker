= form_tag sessions_path, :method => :post, class: "sign_in" do
	%h1 
		wikibitmaker
		%span.underscore _
	%div.span3
		= text_field_tag :username, params[:username], placeholder: "Username", class: "input-block-level"
		= password_field_tag :password, '', placeholder: "Password", class: "input-block-level"

		= submit_tag 'Login', class: 'btn btn-primary'