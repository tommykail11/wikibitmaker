%html
	%head
		%title wikibitmaker
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags

	%body
		- if flash[:notice]
			%div.alert.alert-success
				= flash[:notice]
		- elsif flash[:alert]
			%div.alert.alert-error
				= flash[:alert]

		= yield
