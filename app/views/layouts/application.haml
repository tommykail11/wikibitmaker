!!! 5
%html
	%head
		%title wikibitmaker
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tag

	%body

		- if current_user
			%div.left_nav
				/ %img#bitmaker_logo{ src: image_path("bitmaker_labs_logo.png") }
				%ul
					%li= link_to "New Article", [:new, :article]
					- unless params[:article_id]
						- if params[:id]
							- if current_page?(article_path(params[:id]))
								%li= link_to "Edit Article", [:edit, :article]
							- else
								%li= link_to "Show Article", :article
							%li= link_to "Discussion", article_discussion_path(params[:id])
					- else
						%li= link_to "Article", article_path(params[:article_id])
					%li= link_to "Sign out", :session, :method => :delete

		- if flash[:notice]
			%div.alert.alert-success
				= flash[:notice]
		- elsif flash[:alert]
			%div.alert.alert-error
				= flash[:alert]

		%div.container
			= yield

		%div.bottom_nav
			%hr
			- if current_user
				%span.to_left
					= link_to "Wikibitmaker", "#"
			- else
				%span.to_left
					= link_to "About", "/about"
					= link_to "Bitmaker Labs", "http://bitmakerlabs.com/"

			%span.to_right 
				Made by
				%a{ href: "https://twitter.com/tommykail" } Tommy Kail
				and
				%a{ href: "http://mattvleming.com" } Matt Vleming