!!! 5
%html
	%head
		%title wikibitmaker
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tag

	%body

		- if current_user
			%div.left_nav
				%img#bitmaker_logo{ src: image_path("bitmaker_labs_logo.png")}
				%ul
					%li= link_to "Discussion", @discussion
					%li= link_to "New Article", new_article_path
					- if params[:id]
						- if current_page?(article_path(params[:id]))
							%li= link_to "Edit Article", edit_article_path(params[:id])
						- else
							%li= link_to "Show Article", article_path(params[:id])

		- if flash[:notice]
			%div.alert.alert-success
				= flash[:notice]
		- elsif flash[:alert]
			%div.alert.alert-error
				= flash[:alert]

		= yield